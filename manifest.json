{
    "manifest_version": 3,
    "name": "MettyNeo",
    "version": "1.0",
    "description": "Adds a variety of UI features and improvements to Neopets",
    "homepage_url": "https://mettymagic.neocities.org/",

    "action": {
        "default_title": "MettyNeo",
        "default_popup": "src/popup/mn-popup.js",
        "default_icon": {
            "16": "icons/mn_icon-16.png",
            "32": "icons/mn_icon-32.png",
            "48": "icons/mn_icon-48.png",
            "128": "icons/mn_icon-128.png" 
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*.neopets.com/*", "*://neopets.com/*"],
            "js": [
                "node_modules/jquery/dist/jquery.min.js",
                "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
                "src/neo/mn-neo.js"
            ]
        }
    ],

    "icons": { 
        "16": "icons/mn_icon-16.png",
        "32": "icons/mn_icon-32.png",
        "48": "icons/mn_icon-48.png",
        "128": "icons/mn_icon-128.png" 
    },

    "background": {
        "scripts": [
            "node_modules/jquery/dist/jquery.min.js",
            "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
            "node_modules/content-scripts-register-polyfill/index.js",
            "src/neo/mn-bg.js"
        ],
        "service_worker": "src/neo/mn-bg.js",
        "persistent": false
    },

    "web_accessible_resources": [
        {
            "resources": ["src/neo/*"],
            "matches": ["*://*.neopets.com/*", "*://neopets.com/*"]
        }
    ],

    "permissions": [
        "activeTab",
        "clipboardRead",
        "scripting",
        "userScripts"
    ],

    "host_permissions": [
        "*://*.neopets.com/*", "*://neopets.com/*",
        "*://*.neofood.club/*", "*://neofood.club/*",
        "*://*.jellyneo.net/*",  "*://jellyneo.net/*",
        "*://*.thedailyneopets.com/*", "*://thedailyneopets.com/*",
        "*://*.itemdb.com.br/*", "*://itemdb.com.br/*"
    ]
}